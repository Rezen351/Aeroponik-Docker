{
    "name": "@revolutionpi/node-red-dashboard-2-hmi",
    "version": "0.0.4",
    "description": "Human-Machine-Interface UI components for Node-RED and @flowfuse/node-red-dashboard",
    "keywords": [
        "node-red",
        "node-red-dashboard-2",
        "hmi",
        "kunbus",
        "revolution pi",
        "revpi"
    ],
    "repository": {
        "type": "git",
        "url": "git+ssh://git@gitlab.com/revolutionpi/product/web/node-red-dashboard-2-hmi.git"
    },
    "license": "GPL-2.0-or-later",
    "author": {
        "name": "RevolutionPi",
        "url": "https://gitlab.com/revolutionpi"
    },
    "exports": {
        "require": "./resources/hmi-push-button.umd.js"
    },
    "files": [
        "dist/*",
        "nodes/*",
        "ui/*",
        "resources/*"
    ],
    "scripts": {
        "build": "vite build",
        "build:dev": "NODE_ENV=development vite build",
        "dev": "NODE_ENV=development vite build --watch",
        "dev:prod": "vite build --watch",
        "lint": "npm run lint:js && npm run lint:package",
        "lint:fix": "npm run lint:js:fix && npm run lint:package:fix",
        "lint:js": "eslint --ext .js,.vue,.cjs,.mjs .",
        "lint:js:fix": "yarn lint:js --fix",
        "lint:package": "sort-package-json --check 'package.json'",
        "lint:package:fix": "sort-package-json 'package.json'"
    },
    "dependencies": {
        "vue": "^3.3.8",
        "vuex": "^4.1.0"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^4.5.0",
        "eslint": "^8.53.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-n": "^16.3.1",
        "eslint-plugin-vue": "^9.18.1",
        "sort-package-json": "^2.10.0",
        "vite": "^5.0.12",
        "vite-plugin-css-injected-by-js": "^3.3.0"
    },
    "engines": {
        "node": ">=14"
    },
    "node-red": {
        "version": ">=3.0.0",
        "nodes": {
            "hmi-push-button": "nodes/hmi-push-button.js"
        }
    },
    "node-red-dashboard-2": {
        "version": "1.0.0",
        "widgets": {
            "hmi-push-button": {
                "output": "hmi-push-button.umd.js",
                "component": "HmiPushButton"
            }
        }
    }
}
